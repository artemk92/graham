<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Graham" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/rubine_red</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/graphite_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gray</item>
     </style>

    <style name="Theme.Graham.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Graham.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorOnPrimary">@color/rubine_red</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>


    <style name="Theme.Graham.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorOnPrimary">@color/rubine_red</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

</resources>